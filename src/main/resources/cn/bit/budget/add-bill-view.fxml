<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import com.jfoenix.controls.JFXButton?>
<VBox alignment="CENTER_LEFT" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cn.bit.budget.controller.AddBillController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <children>
        <Label text="日期" />
        <DatePicker fx:id="datePicker" prefWidth="250.0" />

        <Label text="类型" />
        <HBox spacing="20.0">
            <children>
                <RadioButton fx:id="rbExpense" mnemonicParsing="false" selected="true" text="支出">
                    <toggleGroup>
                        <ToggleGroup fx:id="typeGroup" />
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="rbIncome" mnemonicParsing="false" text="收入" toggleGroup="$typeGroup" />
            </children>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="分类" />
            <ComboBox fx:id="parentCategoryBox" prefWidth="120" promptText="一级分类"/>
            <JFXButton text="+" onAction="#onAddParentCategory" styleClass="add-category-button"/>
            <ComboBox fx:id="childCategoryBox" prefWidth="120" promptText="二级分类" editable="true"/>
            <JFXButton text="+" onAction="#onAddChildCategory" styleClass="add-category-button"/>
        </HBox>

        <Label text="金额" />
        <TextField fx:id="amountField" promptText="输入金额 (例如: 25.5)" />

        <Label text="备注" />
        <TextField fx:id="remarkField" promptText="输入备注信息" />

        <HBox alignment="CENTER_RIGHT" spacing="15.0">
            <children>
                <Button mnemonicParsing="false" onAction="#onCancel" text="取消" />
                <Button mnemonicParsing="false" onAction="#onSave" text="保存" />
            </children>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </HBox>
    </children>
</VBox>